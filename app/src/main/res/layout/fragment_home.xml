<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5E2B"
    tools:context=".MainActivity.HomeFragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="50dp"
                app:cardBackgroundColor="#D7FFBD5C"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="200dp">

                    <TextView
                        android:id="@+id/card1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/aclonica"
                        android:text="HELLO USER"
                        android:textAlignment="textEnd"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/card1Image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:src="@drawable/ic_launcher_foreground"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/card1TimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/aclonica"
                        android:text="xx:xx xm"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/card1Image"
                        app:layout_constraintTop_toBottomOf="@+id/card1Title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="50dp"
                app:cardBackgroundColor="#D7FFBD5C"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="350dp">

                    <TextView
                        android:id="@+id/card2Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"
                        android:text="Today Summary"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:minHeight="60dp"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#D7FFBD5C"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="50dp"

                        app:layout_constraintBottom_toTopOf="@id/card2_3"
                        app:layout_constraintEnd_toStartOf="@id/card2_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card2Title">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Total Calorie Consumed"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/card2_1Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXX Cal"
                            android:textSize="20sp"
                            android:textColor="#008B06"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2_2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:minHeight="60dp"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#D7FFBD5C"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="50dp"

                        app:layout_constraintBottom_toTopOf="@id/card2_4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/card2_1"
                        app:layout_constraintTop_toBottomOf="@id/card2Title">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Total Calorie Burnt"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/card2_2Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXX Cal"
                            android:textSize="20sp"
                            android:textColor="#C80C11"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2_3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:minHeight="60dp"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#D7FFBD5C"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="50dp"

                        app:layout_constraintBottom_toTopOf="@id/card2_5"
                        app:layout_constraintEnd_toStartOf="@id/card2_4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card2_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Total Steps Taken"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/card2_3Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXXX"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2_4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:minHeight="60dp"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#D7FFBD5C"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="50dp"

                        app:layout_constraintBottom_toTopOf="@id/card2_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/card2_3"
                        app:layout_constraintTop_toBottomOf="@id/card2_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Net Calorie"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/card2_4Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXX Cal"
                            android:textSize="20sp"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2_5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#D7FFBD5C"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="50dp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/card2_5Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Your daily target is xxxx net calories. You still need to eat more for today/You have eaten too much for today"/>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="50dp"
                app:cardBackgroundColor="#D7FFBD5C"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="200dp">

                    <TextView
                        android:id="@+id/card3Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Last 7 days net"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/card3Chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:layout_margin="8dp"

                        app:layout_constraintTop_toBottomOf="@id/card3Title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/card3Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="Your average net calories is xxx cal"

                        app:layout_constraintTop_toBottomOf="@id/card3Chart"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="50dp"
                app:cardBackgroundColor="#D7FFBD5C"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="200dp">

                    <TextView
                        android:id="@+id/card4Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Weight Tracker"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4_1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#D7FFBD5C"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="50dp"

                        app:layout_constraintTop_toBottomOf="@id/card4Title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/card4_1Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="16dp"
                                android:text="Current Weight: XX kg"/>

                            <Button
                                android:id="@+id/card4_1Button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:background="@color/colorPrimary"
                                android:text="Update weight"
                                android:textSize="8sp" />

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="weight"
                        android:textSize="8sp"

                        app:layout_constraintStart_toStartOf="@id/card4Chart"
                        app:layout_constraintBottom_toTopOf="@id/card4Chart"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:text="net cal"

                        app:layout_constraintEnd_toEndOf="@id/card4Chart"
                        app:layout_constraintBottom_toTopOf="@id/card4Chart"/>

                    <com.github.mikephil.charting.charts.CombinedChart
                        android:id="@+id/card4Chart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:layout_margin="8dp"

                        app:layout_constraintTop_toBottomOf="@id/card4_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>