<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#D7FFBD5C"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/exerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/calValue"
            android:text="Exercise Name"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/exerciseMET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/calValue"
            android:text="MET"
            android:textSize="15sp"
            android:maxLines="1"
            android:textColor="#A93737"
            android:layout_below="@+id/exerciseName"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/calValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="xxx cal/x mins"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>